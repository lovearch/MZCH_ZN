<item name="android:taskToFrontExitAnimation">@flyme:anim/mz_new_app_to_next_open_exit</item>
<item name="android:taskToBackEnterAnimation">@flyme:anim/mz_new_app_to_next_close_enter</item>
<item name="android:taskToBackExitAnimation">@flyme:anim/mz_new_app_to_next_close_exit</item>


